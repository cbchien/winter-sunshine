{
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended", 
        "plugin:react/recommended"
    ],
    "rules": {
        "arrow-body-style": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            140
        ],
        "no-param-reassign": [
            "error",
            {
              "props": false
            }
        ],
        "no-duplicate-imports": "error",
        "no-var":"warn"
    },
    "globals": {
        "React": true
    }
}
  